{
  "name": "adaptus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "audit:a11y": "jest --testPathPattern=accessibility",
    "audit:lighthouse": "lhci autorun",
    "audit:all": "pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "lhci": "lhci autorun",
    "backstop:reference": "backstop reference",
    "backstop:test": "backstop test",
    "backstop:approve": "backstop approve",
    "backstop:report": "backstop openReport",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "playwright": "playwright test",
    "playwright:ui": "playwright test --ui",
    "playwright:update": "playwright test --update-snapshots",
    "percy": "percy exec -- playwright test",
    "visual:all": "bash scripts/run-visual-tests.sh",
    "prepare": "husky"
  },
